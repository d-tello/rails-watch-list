<div class="bg-white md:border-2 border-mark rounded-lg mt-3 p-4">
  <div class="container">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="form-inputs my-3">
        <%= f.input :comment %>
        <%= f.association :movie, input_html: { class: "select2" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, class: "bg-primary p-3 mb-4 mr-4 rounded-lg text-light cursor-pointer hover:opacity-100 opacity-70", value: 'Add a new movie'%>
      <% end %>
    </div>
  </div>
</div>
